<base:KeyboardBase
    x:Class="DontTouchKeyboard.UI.Controls.Keyboards.ControlKeys"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:DontTouchKeyboard.UI.Controls.Keyboards"
    xmlns:base="using:DontTouchKeyboard.UI.Controls.Base"
    xmlns:ext="using:DontTouchKeyboard.UI.Extensions"
    mc:Ignorable="d">

    <StackPanel Spacing="{ThemeResource KeyDefaultSpacing}" Orientation="Horizontal">
        <StackPanel Spacing="{ThemeResource KeyDefaultSpacing}" >
            <base:KeyButton Key="Insert" FontSize="12" LockVisibility="{x:Bind ext:CoreVirtualKeyStatesExtension.ToLockedVisibility(InsertState), Mode=OneWay}" />
            <base:KeyButton Key="Delete" FontSize="12" />
        </StackPanel>
        <StackPanel Spacing="{ThemeResource KeyDefaultSpacing}">
            <base:KeyButton Key="Home" FontSize="12" />
            <base:KeyButton Key="End" FontSize="12" />
        </StackPanel>
        <StackPanel Spacing="{ThemeResource KeyDefaultSpacing}">
            <base:KeyButton Key="PageUp" FontSize="10" />
            <base:KeyButton Key="PageDown" FontSize="10" />
        </StackPanel>
    </StackPanel>
</base:KeyboardBase>
