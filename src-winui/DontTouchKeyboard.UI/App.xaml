<Application
    x:Class="DontTouchKeyboard.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Dark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:converter="using:DontTouchKeyboard.UI.Converters"
    xmlns:dtk="using:DontTouchKeyboard.UI">
    <Application.Resources>
        <ResourceDictionary x:Key="res">
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
                <ResourceDictionary Source="/Themes/Colors.xaml"/>
                <ResourceDictionary Source="/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            
            <dtk:AppViewModelLocator x:Key="Locator"/>

            <converter:KeyToVisualConverter x:Key="KeyToVisualConverter"/>
            <converter:BoolToBoolConverter x:Key="BoolToBoolConverter"/>
            <converter:SystemInfoToMessage x:Key="SystemInfoToMessage"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
