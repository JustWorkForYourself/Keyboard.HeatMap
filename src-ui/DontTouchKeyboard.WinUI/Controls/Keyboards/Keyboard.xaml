<base:KeyboardBase
    x:Class="DontTouchKeyboard.UI.Controls.Keyboards.Keyboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:DontTouchKeyboard.UI.Controls.Keyboards"
    xmlns:base="using:DontTouchKeyboard.UI.Controls.Base"
    xmlns:ext="using:DontTouchKeyboard.UI.Core.Extensions"
    mc:Ignorable="d">

    <StackPanel Spacing="4">
        <StackPanel Spacing="4" Orientation="Horizontal">
            <!-- ` -->
            <base:KeyButton KeyCode="192" Size="Mini" />
            <base:KeyButton Key="Number1" />
            <base:KeyButton Key="Number2" />
            <base:KeyButton Key="Number3" />
            <base:KeyButton Key="Number4" />
            <base:KeyButton Key="Number5" />
            <base:KeyButton Key="Number6" />
            <base:KeyButton Key="Number7" />
            <base:KeyButton Key="Number8" />
            <base:KeyButton Key="Number9" />
            <base:KeyButton Key="Number0" />
            <!-- - -->
            <base:KeyButton KeyCode="189" />
            <!-- = -->
            <base:KeyButton KeyCode="187" />
            <base:KeyButton Key="Back" Size="Medium" >
                <Viewbox Width="14" Height="14">
                    <PathIcon Data="F1 M 8.935547 12.685547 L 11.611328 10 L 8.935547 7.314453 L 9.814453 6.435547 L 12.5 9.111328 L 15.185547 6.435547 L 16.064453 7.314453 L 13.388672 10 L 16.064453 12.685547 L 15.185547 13.564453 L 12.5 10.888672 L 9.814453 13.564453 Z M 20 2.5 L 20 17.5 L 7.5 17.5 L 0 10 L 7.5 2.5 Z M 18.75 3.75 L 8.017578 3.75 L 1.767578 10 L 8.017578 16.25 L 18.75 16.25 Z " />
                </Viewbox>
            </base:KeyButton>
        </StackPanel>
        <StackPanel Spacing="4" Orientation="Horizontal">
            <base:KeyButton Key="Tab" FontSize="13" />
            <base:KeyButton Key="Q" />
            <base:KeyButton Key="W" />
            <base:KeyButton Key="E" />
            <base:KeyButton Key="R" />
            <base:KeyButton Key="T" />
            <base:KeyButton Key="Y" />
            <base:KeyButton Key="U" />
            <base:KeyButton Key="I" />
            <base:KeyButton Key="O" />
            <base:KeyButton Key="P" />
            <!-- [ -->
            <base:KeyButton KeyCode="219" />
            <!-- ] -->
            <base:KeyButton KeyCode="221" />
            <!-- \ -->
            <base:KeyButton KeyCode="220" />
        </StackPanel>
        <StackPanel Spacing="4" Orientation="Horizontal">
            <base:KeyButton Key="CapitalLock" Size="CapsLock" FontSize="12" LockVisibility="{x:Bind ext:KeyStateStatesExtension.ToLockedVisibility(CapitalLockState), Mode=OneWay}" />
            <base:KeyButton Key="A" />
            <base:KeyButton Key="S" />
            <base:KeyButton Key="D" />
            <base:KeyButton Key="F" LocationVisibility="Visible" />
            <base:KeyButton Key="G" />
            <base:KeyButton Key="H" />
            <base:KeyButton Key="J" LocationVisibility="Visible" />
            <base:KeyButton Key="K" />
            <base:KeyButton Key="L" />
            <!-- ; -->
            <base:KeyButton KeyCode="186" />
            <!-- ' -->
            <base:KeyButton KeyCode="222" />
            <base:KeyButton Key="Enter" Size="Medium" FontSize="13" />
        </StackPanel>
        <StackPanel Spacing="4" Orientation="Horizontal">
            <base:KeyButton Key="LeftShift" Size="Large" FontSize="13" />
            <base:KeyButton Key="Z" />
            <base:KeyButton Key="X" />
            <base:KeyButton Key="C" />
            <base:KeyButton Key="V" />
            <base:KeyButton Key="B" />
            <base:KeyButton Key="N" />
            <base:KeyButton Key="M" />
            <!-- , -->
            <base:KeyButton KeyCode="188" />
            <!-- . -->
            <base:KeyButton KeyCode="190" />
            <!-- / -->
            <base:KeyButton KeyCode="191" />
            <base:KeyButton Key="RightShift" Size="Large" FontSize="13" />
        </StackPanel>
        <StackPanel Spacing="4" Orientation="Horizontal">
            <base:KeyButton Key="LeftControl" Size="Medium" FontSize="13" />
            <base:KeyButton Key="LeftWindows" >
                <Viewbox Width="14" Height="14">
                    <PathIcon Data="F1 M 0 8.75 L 0 2.617188 L 7.5 1.572266 L 7.5 8.75 Z M 8.75 1.396484 L 18.75 0 L 18.75 8.75 L 8.75 8.75 Z M 8.75 17.353516 L 8.75 10 L 18.75 10 L 18.75 18.75 Z M 0 16.132812 L 0 10 L 7.5 10 L 7.5 17.177734 Z " />
                </Viewbox>
            </base:KeyButton>
            <base:KeyButton Key="LeftMenu" FontSize="13" />
            <base:KeyButton Key="Space" Size="XXXLarge" >
                <PathIcon Data="M0,0 L0,4 L50,4 L50,0 L48,0 L48,2 L2,2 L2,0 Z" />
            </base:KeyButton>
            <base:KeyButton Key="RightMenu" FontSize="13" />
            <base:KeyButton Key="RightWindows" >
                <Viewbox Width="14" Height="14">
                    <PathIcon Data="F1 M 0 8.75 L 0 2.617188 L 7.5 1.572266 L 7.5 8.75 Z M 8.75 1.396484 L 18.75 0 L 18.75 8.75 L 8.75 8.75 Z M 8.75 17.353516 L 8.75 10 L 18.75 10 L 18.75 18.75 Z M 0 16.132812 L 0 10 L 7.5 10 L 7.5 17.177734 Z " />
                </Viewbox>
            </base:KeyButton>
            <base:KeyButton Key="Application">
                <Viewbox Width="14" Height="14">
                    <PathIcon Data="M7,7 L17,7 L17,8.5 L7,8.5 z M7,10.5 L17,10.5 L17,12 L7,12 z M7,14 L17,14 L17,15.5 L7,15.5 z M3,3 L21,3 L21,19.5 L19.5,19.5 L19.5,4.5 L4.5,4.5 L4.5,18 L19.5,18 L19.5,19.5 L3,19.5 z"/>
                </Viewbox>
            </base:KeyButton>
            <base:KeyButton Key="RightControl" Size="Medium" FontSize="13" />
        </StackPanel>
    </StackPanel>
</base:KeyboardBase>
