<Page
    x:Class="DontTouchKeyboard.WinUI.Views.StandardKeyboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DontTouchKeyboard.WinUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dtkc="using:DontTouchKeyboard.WinUI.Controls.Keyboards"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Spacing="12">
            <StackPanel Spacing="12" HorizontalAlignment="Center">
                <dtkc:FunctionKeys/>
                <dtkc:Keyboard/>
            </StackPanel>
            <Grid>
                <StackPanel Spacing="12" HorizontalAlignment="Center">
                    <dtkc:FunctionKeyEx/>
                    <dtkc:ControlKeys/>
                </StackPanel>
                <StackPanel VerticalAlignment="Bottom">
                    <dtkc:ArrowKeys/>
                </StackPanel>
            </Grid>
            <StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <dtkc:Keypad x:Name="Keypad" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
